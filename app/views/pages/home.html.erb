<div class="searchbar">
  <!-- Magnifying glass icon -->
  <%= simple_form_for(:search, url: root_path, method: :get, html: { class: 'form-inline' }) do |f| %>
  <i class="fa fa-search magnifying-glass" aria-hidden="true"></i>
  <%= f.input :title, label: false, placeholder: 'Search', value: params[:search][:title] %>
    <%= f.input :category, collection: [['Please select category',''], ['Handwerksleistungen', 'Handwerksleistungen'], ['Reinigung', 'Reinigung'], ['Umzüge', 'Umzüge']], label: false, selected: params[:search][:category] %>
  <%= f.input :city, label: false, placeholder: 'City', value: params[:search][:city] %>
  <%= f.input :price, label: false, placeholder: 'Max. price', value: params[:search][:price] %>
  <%= f.submit 'Search', class: 'btn btn-primary button-search' %>
  <% end %>
</div>


<div class="main-container">

  <div class="cards-container">
    <div class="row">

      <% @listings.each do |displaycard| %>

      <div class="col-xs-12 col-sm-6 col-md-4">
        <%= link_to listing_path(displaycard) do %>
        <div class="card">
          <div class="container-picture">
           <%= cl_image_tag displaycard.photo, :class=>"card-picture" %>
         </div>
         <div class="card-price">
          <p><%= displaycard.price %> €</p>
        </div>
        <div class="card-info">
          <p class="card-title"><%= displaycard.title  %></p>
          <div class="card-description"> <p><%= displaycard.description %></p></div>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>

  </div>
</div>

<div id="map"></div>

<!-- Gmaps js: building the map -->
<script>
  function initMap() {
        // Create a map object and specify the DOM element for display.
        var map = new google.maps.Map(document.getElementById('map'), {
          center: {lat: 52.5206, lng: 13.4098},
          scrollwheel: false,
          zoom: 14
        });
      }
    </script>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <!-- Gmaps JavaScript -->
    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCzER7O10ZOUp7FloJzMe2r8X1GIQhgt7Q&callback=initMap">
  </script>
