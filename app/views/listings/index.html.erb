  <div class="row">
    <div class="searchbar">
      <div class="col-xs-12 col-sm-2">
        <!-- Magnifying glass icon -->
        <%= simple_form_for(:search, url: listings_path, method: :get, html: { class: 'form-inline' }) do |f| %>

        </div>
        <div class="col-xs-12 col-sm-2"><i class="fa fa-search magnifying-glass" aria-hidden="true"></i>
        <%= f.input :title, label: false, placeholder: 'Search', input_html: {value: params[:search][:title]} %></div>
       <div class="col-xs-12 col-sm-2"> <%= f.input :category, collection: [['Please select category',''], ['Repairs', 'Repairs'], ['Cleaning', 'Cleaning'], ['Child Care', 'Child Care']], label: false, selected: params[:search][:category] %></div>
       <div class="col-xs-12 col-sm-2"> <%= f.input :city, label: false, placeholder: 'City', input_html: {value: params[:search][:city]} %> </div>
        <div class="col-xs-12 col-sm-2"><%= f.input :price, label: false, placeholder: 'Max. price', input_html: {value: params[:search][:price]} %> </div>
        <div class="col-xs-12 col-sm-2"><%= f.submit 'Search', class: 'btn btn-info button-search' %> </div>

        <% end %>
      </div>
    </div>
  </div>
  <div class="main-container">
    <div class="cards-container">
      <div class="row">
        <% @listings.each do |displaycard| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <%= link_to listing_path(displaycard) do %>
          <div class="card">
            <div class="container-picture">
             <%= cl_image_tag(displaycard.photo, class: "card-picture") %>
           </div>
           <div class="card-price">
            <p><%= displaycard.price %> â‚¬</p>
          </div>
          <div class="card-info">
            <p class="card-title"><%= displaycard.title  %></p>
            <div class="card-description"> <p><%= displaycard.description %></p></div>
          </div>
        </div>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>

    <div id="map">
    </div>

  <% content_for(:before_js) do %>


  <%= javascript_include_tag "https://maps.google.com/maps/api/js?libraries=places&key=#{ENV['GOOGLE_API_SERVER_KEY']}" %>
  <%= javascript_include_tag "https://cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/markerclusterer/src/markerclusterer_compiled.js" %>
  <%= javascript_include_tag "https://cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js" %>
  <% end %>


  <% content_for(:after_js) do %>
  <script type="text/javascript">
    var handler = Gmaps.build('Google');
    handler.buildMap({ internal: { id: 'map' } }, function(){
      markers = handler.addMarkers(<%= raw @markers.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
      if (markers.length == 0) {
        handler.getMap().setZoom(2);
      } else if (markers.length == 1) {
        handler.getMap().setZoom(14);
      }
    });
  </script>
  <% end %>

