



  <div class="searchbar">
  <!-- Magnifying glass icon -->
  <%= simple_form_for(:search, url: root_path, method: :get, html: { class: 'form-inline' }) do |f| %>
  <i class="fa fa-search magnifying-glass" aria-hidden="true"></i>
  <%= f.input :title, label: false, placeholder: 'Search', value: params[:search][:title] %>
    <%= f.input :category, collection: [['Please select category',''], ['Repairs', 'Repairs'], ['Cleaning', 'Cleaning'], ['Child Care', 'Child Care']], label: false, selected: params[:search][:category] %>
  <%= f.input :city, label: false, placeholder: 'City', value: params[:search][:city] %>
  <%= f.input :price, label: false, placeholder: 'Max. price', value: params[:search][:price] %>
  <%= f.submit 'Search', class: 'btn btn-info button-search' %>

  <% end %>
</div>


